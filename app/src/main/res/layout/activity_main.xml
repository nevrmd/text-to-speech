<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_text_to_spell"
        android:layout_width="332dp"
        android:layout_height="60dp"
        android:autofillHints="Text To Spell"
        android:labelFor="@id/btn_spell"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/et_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_spell"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:text="@string/btn_spell"
        android:textStyle="bold"
        android:textSize="40sp"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_text_to_spell" />

</androidx.constraintlayout.widget.ConstraintLayout>